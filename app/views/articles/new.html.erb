<h1>Articles#new</h1>
<p>Find me in app/views/articles/new.html.erb</p>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@article) do |i| %>
      <%= render 'shared/error_messages_articles' %>

      <%= i.label :title %>
      <%= i.text_field :title, class: 'form-control' %>

      <%= i.label :content %>
      <%= i.textarea_field :content, class: 'form-control' %>

      <%= i.label :user_id %>
      <%= i.number_field :user_id %>

      <%= i.submit "Publish", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
